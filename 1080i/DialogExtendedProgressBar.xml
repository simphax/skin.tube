<?xml version="1.0" encoding="UTF-8"?>
<window id="2005">

    <controls>

        <control type="group">
            <visible>!Window.IsVisible(fullscreenvideo)</visible>
            <visible>!Window.IsVisible(visualisation)</visible>
            <include>DrawerPushAnimation</include>
            
            <animation type="WindowOpen">
                <effect type="Fade" start="0" end="100" time="300" tween="cubic"/>
                <effect type="Slide" start="-500,0" end="0,0" time="300" center="auto" tween="back"/>
            </animation>
            <animation type="WindowClose">
                <effect type="Fade" start="100" end="0" time="150" tween="cubic" easing="in"/>
                <effect type="Slide" start="0,0" end="-500,0" time="150" center="auto" tween="cubic" easing="in"/>
            </animation>

            <animation condition="Window.IsVisible(InfoDialog)" effect="Slide" start="0,0" end="0,-40" time="150" center="auto" tween="cubic" easing="in">Conditional</animation>

            <control type="grouplist">
                <top>91</top>
                <right>100</right>

                <align>right</align>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>

                <!-- Title -->
                <control type="label" id="31">
                    <left>5</left>
                    <width>auto</width>
                    <top>10</top>
                    <textcolor>Secondary</textcolor>
                    <font>WindowTitleTertiary</font>
                </control>
                <!-- Title -->
                <control type="label" id="30">
                    <left>10</left>
                    <width>auto</width>
                    <textcolor>Primary</textcolor>
                    <font>WindowTitleSecondary</font>
                </control>
                <control type="image">
                    <top>2</top>
                    <left>5</left>
                    <width>45</width>
                    <height>45</height>
                    <texture>$INFO[Control.GetLabel(32),progress/circle,.png]</texture>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                </control>

                <control type="image">
                    <top>2</top>
                    <left>-50</left>
                    <width>45</width>
                    <height>45</height>
                    <texture colordiffuse="33FFFFFF">progress/circle100.png</texture>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                </control>
            </control>
        </control>

        <control type="progress" id="32" description="Progress bar">
            <animation effect="fade" end="0" condition="true">Conditional</animation>
        </control>

    </controls>

</window>